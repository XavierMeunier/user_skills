<% content_for :h1, "Users" %>

<p id="notice"><%= notice %></p>

<div class="row">
  <table class="table">
    <thead>
      <tr>
        <th>Points</th>
        <th>Skill</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.points %></td>
          <td><%= user_skill_name(user) %></td>
          <td><%= link_to 'Show', user, :class => "btn btn-info" %></td>
          <td><%= link_to 'Edit', edit_user_path(user), :class => "btn btn-warning" %></td>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>



<%= link_to 'New User', new_user_path, :class => "btn btn-primary" %>